{
    "name": "@revertdotdev/backend",
    "version": "1.0.0",
    "description": "Codebase to run revert-backend",
    "private": true,
    "scripts": {
        "build": "mkdir -p ./dist/generated && cp -r ./generated/ ./dist/generated && tsc && yarn migration:generate",
        "watch": "tsc -w",
        "start": "NODE_ENV=production node ./dist/index.js",
        "start:prod": "yarn db-deploy && NODE_ENV=production node ./dist/index.js",
        "start:dev": "NODE_ENV=development ts-node-dev --respawn index.ts",
        "test": "jest --config=jest.config.json",
        "dev": "NODE_ENV=development ts-node-dev --respawn index.ts",
        "db-deploy": "prisma migrate deploy",
        "db-seed": "prisma db seed",
        "db-pull": "prisma db pull",
        "migration:resolve": "prisma migrate resolve --applied $MIGRATION_ID",
        "migration:rollback": "prisma migrate resolve --rolled-back $MIGRATION_ID",
        "studio": "prisma studio",
        "migration:dryRun": "prisma migrate dev --create-only --name %1",
        "migration:generate": "prisma migrate dev --name %1"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "author": {
        "name": "Jatin Sandilya",
        "url": "https://twitter.com/revertdotdev",
        "organization": true
    },
    "devDependencies": {
        "@babel/core": "^7.19.6",
        "@babel/plugin-transform-modules-commonjs": "^7.19.6",
        "@babel/preset-env": "^7.19.4",
        "@babel/preset-typescript": "^7.18.6",
        "@types/bull": "^3.15.9",
        "@types/cors": "^2.8.13",
        "@types/jest": "^29.5.4",
        "@types/node": "*",
        "@types/node-cron": "^3.0.7",
        "@types/uuid": "^9.0.2",
        "babel-jest": "^29.2.2",
        "concurrently": "^7.3.0",
        "eslint-plugin-deprecation": "^1.3.2",
        "fern-api": "^0.0.184",
        "jest": "^29.6.4",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "@googleapis/gmail": "^0.3.4",
        "@prisma/client": "^4.12.0",
        "@sentry/node": "^7.55.2",
        "@shortloop/node": "0.0.10",
        "@types/express": "^4.17.13",
        "@yarnpkg/pnpify": "^4.0.0-rc.42",
        "axios": "^0.27.2",
        "bull": "^4.8.5",
        "constructs": "^10.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.1",
        "express-rate-limit": "^6.7.0",
        "mongoose": "^6.6.5",
        "nanoid": "^3.0.0",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.7.8",
        "oauth-1.0a": "^2.2.6",
        "prisma": "^4.12.0",
        "svix": "^1.8.0"
    }
}
